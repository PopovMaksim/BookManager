<Window x:Name="AddEditWindow1" x:Class="BookManager.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManager"
        mc:Ignorable="d"
        Height="180" Width="800" ResizeMode="NoResize">
    <Grid>
        <DataGrid ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" x:Name="AddEditGataGrid" AutoGenerateColumns="False" IsReadOnly="False" CanUserReorderColumns="False" CanUserResizeColumns="False" HorizontalAlignment="Center" Width="800" Height="83" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Шифр" Binding="{Binding code}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding author}" Width="*"/>
                <DataGridTextColumn Header="Назва книги" Binding="{Binding title}" Width="*"/>
                <DataGridTextColumn Header="Рік видання" Binding="{Binding year}" Width="*"/>
                <DataGridTextColumn Header="Стелаж" Binding="{Binding rack}" Width="*"/>
                <DataGridTextColumn Header="Полиця" Binding="{Binding shelf}" Width="*"/>

            </DataGrid.Columns>


        </DataGrid>
        <Button x:Name="AddEditButton" Content="" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top"  Width="216" Background="LightGreen" BorderBrush="Black" Foreground="Black" Style="{DynamicResource MaterialDesignFlatDarkBgButton}"/>

    </Grid>
</Window>
